---3rd answer
select department_id from employees
intersect
select department_id from departments;
---------------------------------------------------
---4th answer
select top 10*
from employees
order by employee_id desc;
------------------------------------------------
---5th answer
select top 5*
from employees
order by salary desc;
-------------------------------------------------
---6th answer
select sum(salary)
from employees;
------------------------------------------------
---7th answer
select*
from employees
where year(hire_date)=2025;
------------------------------------------
---8th answer
select top 1 count(*)
from departments
group by department_id
order by count(*) desc;
--------------------------------------------
---9th answer
select  count(*)as department_wise
from employees
group by department_id;
-------------------------------------------
--10th answer
select salary* 1.1 as updated_salary
from employees
group by salary;
-------------------------------------------
---11th answer
select*
from employees
where salary between 50000 and 100000;
---------------------------------------------
---12th answer
select job_title, count(*)
from employees
group by job_title;
--------------------------------------------
---13th answer
