----------------------------------------------
---14th answer
select substring('job_title',1,3)
from employees;
----------------------------------------------
---15th answer
select first_name+','+last_name
from employees;
---------------------------------------------
---16th answer
select substring(email,charindex('@',email)+1,len(email))
from employees;
---------------------------------------------
---17th answer
select*from departments
update departments
set department_name='gaming'
where department_id=1;
-------------------------------------------------
---18th answer
select upper(left (first_name,1))+lower (substring(first_name,2,len(first_name)))
from employees;
-----------------------------------------------------------------------------------
---19th answer
select format(hire_date ,'dd/mm/yy')
from employees;
--------------------------------------------------------
---20th answer
select employee_id, 
             first_name, datediff(year,hire_date,getdate())
from employees;
---------------------------------------------------------
---21st answer
select employee_id,first_name,dateadd(year,60,dob)
from employees
where dateadd(year,60,dob)between getdate()and dateadd(year,5,getdate());
